# Template file for 'microsoft-edge-beta'
pkgname=microsoft-edge-beta
version=96.0.1054.8
revision=1
archs="x86_64"
build_style=fetch
makedepends="appdata-tools"
depends="desktop-file-utils"
short_desc="Microsoft Edge browser"
maintainer="Joseph Benden <joe@benden.us>"
license="custom:Commercial"
homepage="https://www.microsoftedgeinsider.com/en-us/"
distfiles="https://packages.microsoft.com/repos/edge/pool/main/m/${pkgname}/${pkgname}_${version}-${revision}_amd64.deb"
checksum=39283e7a57fb4c1d3d25a1e991b5522e4f87a6e120dd099828a94d7fe711115f

restricted=yes
noverifyrdeps=yes
nopie=yes
nostrip=yes

do_install() {
	ar x ${pkgname}_${version}-${revision}_amd64.deb data.tar.xz
	bsdtar xpvf data.tar.xz
	rm etc/cron.daily/microsoft-edge-beta
	cp -r {etc,opt,usr} ${DESTDIR}
	vlicense ${FILESDIR}/LICENSE
}
